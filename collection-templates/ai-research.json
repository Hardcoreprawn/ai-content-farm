    "metadata": {
        "template_name": "ai-research",
        "description": "Cutting-edge AI/ML research papers and technical analysis from leading researchers",
        "focus_areas": [
            "arXiv CS Papers (AI, ML, CL, CV, NE)",
            "Industry Research Labs (Google, OpenAI, Anthropic, DeepMind, Meta)",
            "ML Frameworks & Tooling (TensorFlow, PyTorch, HuggingFace)",
            "Technical ML Blogs (Distill, The Gradient)",
            "Researcher Blogs (Lilian Weng, Sebastian Ruder, Chris Olah)"
        ],
        "content_philosophy": "Research-quality AI/ML content with mathematical and technical depth",
        "sources_rationale": {
            "arxiv": "Pre-print research papers from leading AI labs and universities",
            "research_labs": "Official announcements and papers from frontier AI companies",
            "frameworks": "Technical updates on ML infrastructure and tooling",
            "researcher_blogs": "In-depth explanations and analysis from ML practitioners",
            "distill": "Interactive, visual explanations of ML concepts"
        },
        "quality_standards": {
            "high_deduplication": "0.90 threshold to avoid near-duplicate paper announcements",
            "technical_depth": "Focus on architecture, training, and novel techniques",
            "avoid_hype": "Exclude breathless predictions and crypto crossover content"
        }
    }

[flake8]
max-line-length = 100
extend-ignore =
    E203,
    W503,
    E501,
    E713,
    F401,
    F841,
    F811,
    F541,
    W291,
    W293,
    E722,
    F405,
    F403,
    F824,
    E402
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    *_old.py
per-file-ignores =
    __init__.py:F401,F403
    test_*.py:F401,F841
    conftest.py:F401
# Trigger pipeline test

/* Modern Grid Theme - AI Content Farm */
/* A clean, responsive, grid-based theme optimized for tech content */

/* Import modular CSS files */
@import url('./css/variables.css');
@import url('./css/layout.css');
@import url('./css/components.css');

/* Theme-specific overrides and customizations */
:root {
    /* Color Palette - Modern Tech Theme */
    --primary-color: #6366f1;
    --primary-hover: #5856eb;
    --primary-light: #a5b4fc;
    --secondary-color: #8b5cf6;
    --accent-color: #06b6d4;
    --accent-hover: #0891b2;

    /* Neutral Colors */
    --background: #ffffff;
    --surface: #f8fafc;
    --surface-elevated: #ffffff;
    --border-color: #e2e8f0;
    --border-hover: #cbd5e1;

    /* Text Colors */
    --text-primary: #1e293b;
    --text-secondary: #64748b;
    --text-muted: #94a3b8;
    --text-inverse: #ffffff;

    /* Status Colors */
    --success: #10b981;
    --warning: #f59e0b;
    --error: #ef4444;
    --info: #3b82f6;

    /* Dark Mode Colors */
    --dark-background: #0f172a;
    --dark-surface: #1e293b;
    --dark-surface-elevated: #334155;
    --dark-border: #334155;
    --dark-text-primary: #f1f5f9;
    --dark-text-secondary: #cbd5e1;
    --dark-text-muted: #94a3b8;

    /* Typography */
    --font-family-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', roboto, oxygen, ubuntu, cantarell, sans-serif;
    --font-family-mono: 'JetBrains Mono', 'SF Mono', consolas, 'Liberation Mono', menlo, courier, monospace;

    /* Font Sizes */
    --text-xs: 0.75rem;
    /* 12px */
    --text-sm: 0.875rem;
    /* 14px */
    --text-base: 1rem;
    /* 16px */
    --text-lg: 1.125rem;
    /* 18px */
    --text-xl: 1.25rem;
    /* 20px */
    --text-2xl: 1.5rem;
    /* 24px */
    --text-3xl: 1.875rem;
    /* 30px */
    --text-4xl: 2.25rem;
    /* 36px */
    --text-5xl: 3rem;
    /* 48px */

    /* Spacing Scale */
    --space-1: 0.25rem;
    /* 4px */
    --space-2: 0.5rem;
    /* 8px */
    --space-3: 0.75rem;
    /* 12px */
    --space-4: 1rem;
    /* 16px */
    --space-5: 1.25rem;
    /* 20px */
    --space-6: 1.5rem;
    /* 24px */
    --space-8: 2rem;
    /* 32px */
    --space-10: 2.5rem;
    /* 40px */
    --space-12: 3rem;
    /* 48px */
    --space-16: 4rem;
    /* 64px */
    --space-20: 5rem;
    /* 80px */
    --space-24: 6rem;
    /* 96px */

    /* Border Radius */
    --radius-sm: 0.375rem;
    /* 6px */
    --radius-md: 0.5rem;
    /* 8px */
    --radius-lg: 0.75rem;
    /* 12px */
    --radius-xl: 1rem;
    /* 16px */
    --radius-2xl: 1.5rem;
    /* 24px */
    --radius-full: 9999px;

    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-base: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);

    /* Transitions */
    --transition-fast: 150ms ease-out;
    --transition-base: 200ms ease-out;
    --transition-slow: 300ms ease-out;

    /* Z-Index Scale */
    --z-dropdown: 1000;
    --z-sticky: 1020;
    --z-fixed: 1030;
    --z-modal: 1040;
    --z-popover: 1050;
    --z-tooltip: 1060;

    /* Breakpoints (for reference in media queries) */
    --breakpoint-sm: 640px;
    --breakpoint-md: 768px;
    --breakpoint-lg: 1024px;
    --breakpoint-xl: 1280px;
    --breakpoint-2xl: 1536px;
}

/* Dark Mode */
@media (prefers-color-scheme: dark) {
    :root {
        --background: var(--dark-background);
        --surface: var(--dark-surface);
        --surface-elevated: var(--dark-surface-elevated);
        --border-color: var(--dark-border);
        --text-primary: var(--dark-text-primary);
        --text-secondary: var(--dark-text-secondary);
        --text-muted: var(--dark-text-muted);
    }
}

/* Dark mode class override */
[data-theme="dark"] {
    --background: var(--dark-background);
    --surface: var(--dark-surface);
    --surface-elevated: var(--dark-surface-elevated);
    --border-color: var(--dark-border);
    --text-primary: var(--dark-text-primary);
    --text-secondary: var(--dark-text-secondary);
    --text-muted: var(--dark-text-muted);
}

/* Reset and Base Styles */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    font-size: 16px;
    line-height: 1.6;
    scroll-behavior: smooth;
    -webkit-text-size-adjust: 100%;
    -moz-text-size-adjust: 100%;
    text-size-adjust: 100%;
}

body {
    font-family: var(--font-family-primary);
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--text-primary);
    background-color: var(--background);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Skip Link for Accessibility */
.skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: var(--primary-color);
    color: var(--text-inverse);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 600;
    z-index: var(--z-tooltip);
    transition: top var(--transition-fast);
}

.skip-link:focus {
    top: 6px;
}

/* Typography */
h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
}

h1 {
    font-size: var(--text-4xl);
}

h2 {
    font-size: var(--text-3xl);
}

h3 {
    font-size: var(--text-2xl);
}

h4 {
    font-size: var(--text-xl);
}

h5 {
    font-size: var(--text-lg);
}

h6 {
    font-size: var(--text-base);
}

p {
    margin-bottom: var(--space-4);
    color: var(--text-secondary);
}

a {
    color: var(--primary-color);
    text-decoration: none;
    transition: color var(--transition-fast);
}

a:hover {
    color: var(--primary-hover);
}

a:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
}

/* Code Elements */
code,
pre {
    font-family: var(--font-family-mono);
    font-size: var(--text-sm);
}

code {
    background: var(--surface);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    padding: var(--space-1) var(--space-2);
}

pre {
    background: var(--surface);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: var(--space-4);
    overflow-x: auto;
    margin-bottom: var(--space-4);
}

pre code {
    background: none;
    border: none;
    padding: 0;
}

/* Header Styles */
.site-header {
    background: var(--surface-elevated);
    border-bottom: 1px solid var(--border-color);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
}

.header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-4);
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 4rem;
    gap: var(--space-4);
}

/* Site Brand */
.site-brand {
    flex-shrink: 0;
}

.brand-link {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--text-primary);
    text-decoration: none;
    transition: transform var(--transition-fast);
}

.brand-link:hover {
    transform: translateY(-1px);
}

.brand-icon {
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-inverse);
}

.brand-icon svg {
    width: 20px;
    height: 20px;
}

.brand-text {
    display: flex;
    flex-direction: column;
    gap: 0;
}

.site-title {
    font-size: var(--text-xl);
    font-weight: 700;
    margin: 0;
    line-height: 1.1;
}

.site-tagline {
    font-size: var(--text-xs);
    color: var(--text-muted);
    margin: 0;
    line-height: 1.1;
}

/* Navigation */
.main-nav {
    display: none;
}

@media (min-width: 768px) {
    .main-nav {
        display: block;
    }
}

.nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-6);
    list-style: none;
}

.nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    font-weight: 500;
    color: var(--text-secondary);
    transition: all var(--transition-fast);
}

.nav-link:hover,
.nav-link.active {
    background: var(--surface);
    color: var(--primary-color);
}

.nav-icon {
    font-size: var(--text-sm);
}

/* Theme Toggle */
.theme-toggle {
    background: none;
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: var(--space-2);
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
}

.theme-toggle:hover {
    background: var(--surface);
    border-color: var(--border-hover);
}

.theme-icon {
    display: none;
    font-size: var(--text-base);
}

/* Show appropriate theme icon */
:root .theme-icon-light {
    display: block;
}

[data-theme="dark"] .theme-icon-light {
    display: none;
}

[data-theme="dark"] .theme-icon-dark {
    display: block;
}

/* Mobile Menu */
.mobile-menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: none;
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    cursor: pointer;
    gap: 4px;
    padding: var(--space-2);
    transition: all var(--transition-fast);
}

.mobile-menu-toggle:hover {
    background: var(--surface);
    border-color: var(--border-hover);
}

.hamburger-line {
    width: 100%;
    height: 2px;
    background: var(--text-primary);
    border-radius: 1px;
    transition: all var(--transition-fast);
}

@media (min-width: 768px) {
    .mobile-menu-toggle {
        display: none;
    }
}

/* Mobile Navigation */
.mobile-nav {
    display: none;
    background: var(--surface-elevated);
    border-top: 1px solid var(--border-color);
    padding: var(--space-4);
}

.mobile-nav.open {
    display: block;
}

.mobile-nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
}

.mobile-nav-link {
    display: block;
    padding: var(--space-3);
    color: var(--text-secondary);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
}

.mobile-nav-link:hover {
    background: var(--surface);
    color: var(--primary-color);
}

/* Main Content */
.site-main {
    flex: 1;
    padding: var(--space-8) 0;
}

.main-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-4);
}

/* Hero Section */
.hero-section {
    position: relative;
    padding: var(--space-16) 0;
    margin-bottom: var(--space-12);
    overflow: hidden;
    border-radius: var(--radius-2xl);
    background: linear-gradient(135deg,
            rgba(99, 102, 241, 0.1) 0%,
            rgba(139, 92, 246, 0.1) 50%,
            rgba(6, 182, 212, 0.1) 100%);
}

.hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.hero-title {
    margin-bottom: var(--space-6);
}

.hero-title-main {
    display: block;
    font-size: var(--text-5xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-2);
}

.hero-title-sub {
    display: block;
    font-size: var(--text-xl);
    font-weight: 500;
    color: var(--primary-color);
}

.hero-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-6);
    flex-wrap: wrap;
}

.stat-card {
    background: var(--surface-elevated);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    text-align: center;
    min-width: 120px;
    box-shadow: var(--shadow-base);
    transition: all var(--transition-base);
}

.stat-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.stat-number {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--primary-color);
    line-height: 1;
    margin-bottom: var(--space-1);
}

.stat-label {
    font-size: var(--text-sm);
    color: var(--text-muted);
    font-weight: 500;
}

/* Hero Background Effects */
.hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
}

.hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg,
            rgba(99, 102, 241, 0.05) 0%,
            transparent 50%,
            rgba(6, 182, 212, 0.05) 100%);
}

.hero-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(99, 102, 241, 0.1) 1px, transparent 0);
    background-size: 20px 20px;
}

/* Controls Section */
.controls-section {
    margin-bottom: var(--space-8);
}

.controls-container {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    align-items: center;
    justify-content: space-between;
    background: var(--surface-elevated);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--space-4);
    box-shadow: var(--shadow-base);
}

.filter-controls,
.sort-controls {
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.control-label {
    font-weight: 500;
    color: var(--text-primary);
    font-size: var(--text-sm);
}

.filter-select,
.sort-select {
    background: var(--background);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-sm);
    color: var(--text-primary);
    cursor: pointer;
    transition: all var(--transition-fast);
}

.filter-select:hover,
.sort-select:hover {
    border-color: var(--border-hover);
}

.filter-select:focus,
.sort-select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.view-controls {
    display: flex;
    gap: var(--space-1);
    background: var(--background);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: var(--space-1);
}

.view-toggle {
    background: none;
    border: none;
    padding: var(--space-2);
    border-radius: var(--radius-sm);
    cursor: pointer;
    color: var(--text-muted);
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
}

.view-toggle:hover {
    color: var(--text-primary);
    background: var(--surface);
}

.view-toggle.active {
    background: var(--primary-color);
    color: var(--text-inverse);
}

.view-toggle svg {
    width: 16px;
    height: 16px;
}

/* Articles Grid */
.articles-section {
    margin-bottom: var(--space-12);
}

.articles-grid {
    display: grid;
    gap: var(--space-6);
    grid-template-columns: 1fr;
}

/* Responsive Grid */
@media (min-width: 640px) {
    .articles-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (min-width: 1024px) {
    .articles-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

@media (min-width: 1536px) {
    .articles-grid {
        grid-template-columns: repeat(4, 1fr);
    }
}

/* Grid View Modifier */
.articles-grid.view-grid {
    gap: var(--space-4);
}

@media (min-width: 640px) {
    .articles-grid.view-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

@media (min-width: 1024px) {
    .articles-grid.view-grid {
        grid-template-columns: repeat(4, 1fr);
    }
}

@media (min-width: 1536px) {
    .articles-grid.view-grid {
        grid-template-columns: repeat(6, 1fr);
    }
}

/* Article Cards */
.article-card {
    background: var(--surface-elevated);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-base);
    display: flex;
    flex-direction: column;
    height: 100%;
}

.article-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-color);
}

/* Article Header */
.article-header {
    margin-bottom: var(--space-4);
}

.article-meta-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-3);
}

.article-source {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.article-indicators {
    display: flex;
    gap: var(--space-2);
}

.quality-badge,
.length-badge {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-full);
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
}

.quality-badge.premium {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    color: var(--text-inverse);
}

.quality-badge.high {
    background: var(--primary-color);
    color: var(--text-inverse);
}

.length-badge.long {
    background: var(--accent-color);
    color: var(--text-inverse);
}

.article-title {
    margin: 0;
    line-height: 1.3;
}

.article-link {
    color: var(--text-primary);
    font-weight: 600;
    text-decoration: none;
    transition: color var(--transition-fast);
}

.article-link:hover {
    color: var(--primary-color);
}

/* Article Preview */
.article-preview {
    flex: 1;
    margin-bottom: var(--space-4);
}

.article-excerpt {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
}

.article-excerpt.no-content {
    font-style: italic;
    color: var(--text-muted);
}

/* Article Footer */
.article-footer {
    margin-top: auto;
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-color);
}

.article-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    align-items: center;
    margin-bottom: var(--space-3);
    font-size: var(--text-xs);
    color: var(--text-muted);
}

.article-date,
.reading-time,
.quality-score {
    display: flex;
    align-items: center;
    gap: var(--space-1);
}

.article-actions {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
}

.source-link {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-xs);
    color: var(--text-muted);
    padding: var(--space-1) var(--space-2);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
}

.source-link:hover {
    background: var(--surface);
    color: var(--primary-color);
    border-color: var(--primary-color);
}

.source-link svg {
    width: 12px;
    height: 12px;
}

.read-more-btn {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--primary-color);
    color: var(--text-inverse);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: 500;
    transition: all var(--transition-fast);
    text-decoration: none;
}

.read-more-btn:hover {
    background: var(--primary-hover);
    transform: translateX(2px);
}

.read-more-btn svg {
    width: 16px;
    height: 16px;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: var(--space-16) var(--space-4);
}

.empty-state-content {
    max-width: 400px;
    margin: 0 auto;
}

.empty-state-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-6);
    color: var(--text-muted);
}

.empty-state-icon svg {
    width: 100%;
    height: 100%;
}

.empty-state-title {
    color: var(--text-primary);
    margin-bottom: var(--space-4);
}

.empty-state-description {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
}

.empty-state-action {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--primary-color);
    color: var(--text-inverse);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: all var(--transition-fast);
}

.empty-state-action:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
}

/* Loading State */
.loading-state {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-12);
    gap: var(--space-4);
}

.loading-spinner {
    width: 32px;
    height: 32px;
    border: 3px solid var(--border-color);
    border-top: 3px solid var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.loading-text {
    color: var(--text-secondary);
    font-weight: 500;
    margin: 0;
}

/* Article Page Styles */
.article-page .main-container {
    max-width: 800px;
}

.article-container {
    background: var(--surface-elevated);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    margin-bottom: var(--space-8);
}

/* Article Breadcrumb */
.article-breadcrumb {
    background: var(--surface);
    border-bottom: 1px solid var(--border-color);
    padding: var(--space-4) var(--space-6);
}

.breadcrumb-list {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    list-style: none;
    font-size: var(--text-sm);
}

.breadcrumb-link {
    color: var(--primary-color);
    font-weight: 500;
}

.breadcrumb-separator {
    color: var(--text-muted);
}

.breadcrumb-current {
    color: var(--text-muted);
}

/* Article Header Section */
.article-header-section {
    padding: var(--space-8) var(--space-6);
    border-bottom: 1px solid var(--border-color);
}

.article-header-section .article-meta-top {
    margin-bottom: var(--space-4);
}

.article-source-info {
    display: flex;
    align-items: center;
    gap: var(--space-3);
}

.article-source-info .article-source {
    font-size: var(--text-sm);
    background: var(--surface);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    border: 1px solid var(--border-color);
}

.original-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--primary-color);
    padding: var(--space-1) var(--space-3);
    border: 1px solid var(--primary-color);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
}

.original-link:hover {
    background: var(--primary-color);
    color: var(--text-inverse);
}

.original-link svg {
    width: 14px;
    height: 14px;
}

.article-header-section .article-title {
    font-size: var(--text-4xl);
    line-height: 1.1;
    margin-bottom: var(--space-6);
    color: var(--text-primary);
}

.article-meta-main {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

.article-stats {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    font-size: var(--text-sm);
    color: var(--text-secondary);
}

.article-stats>* {
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.article-stats svg {
    width: 16px;
    height: 16px;
    color: var(--text-muted);
}

/* Article Content */
.article-content {
    padding: var(--space-8) var(--space-6);
}

.article-body {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--text-primary);
}

.article-body h1,
.article-body h2,
.article-body h3,
.article-body h4,
.article-body h5,
.article-body h6 {
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
}

.article-body p {
    margin-bottom: var(--space-6);
}

.article-body ul,
.article-body ol {
    margin-bottom: var(--space-6);
    padding-left: var(--space-6);
}

.article-body li {
    margin-bottom: var(--space-2);
}

.article-body blockquote {
    margin: var(--space-6) 0;
    padding: var(--space-4) var(--space-6);
    background: var(--surface);
    border-left: 4px solid var(--primary-color);
    border-radius: var(--radius-md);
    font-style: italic;
}

.article-body img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    margin: var(--space-6) 0;
}

.article-no-content {
    text-align: center;
    padding: var(--space-12);
}

.no-content-message h2 {
    color: var(--text-primary);
    margin-bottom: var(--space-4);
}

.no-content-message p {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
}

.view-original-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--primary-color);
    color: var(--text-inverse);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: all var(--transition-fast);
}

.view-original-btn:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
}

.view-original-btn svg {
    width: 16px;
    height: 16px;
}

/* Article Footer Section */
.article-footer-section {
    padding: var(--space-6);
    border-top: 1px solid var(--border-color);
    background: var(--surface);
}

.article-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
}

@media (min-width: 768px) {
    .article-actions {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
    }
}

/* Share Section */
.share-section {
    flex: 1;
}

.share-title {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
    color: var(--text-primary);
}

.share-buttons {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
}

.share-btn {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    background: var(--background);
    color: var(--text-secondary);
    font-size: var(--text-sm);
    font-weight: 500;
    transition: all var(--transition-fast);
    text-decoration: none;
    cursor: pointer;
}

.share-btn:hover {
    border-color: var(--primary-color);
    color: var(--primary-color);
    background: var(--surface);
}

.share-btn svg {
    width: 16px;
    height: 16px;
}

/* Navigation Section */
.navigation-section {
    flex-shrink: 0;
}

.back-to-home {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--primary-color);
    font-weight: 500;
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--primary-color);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
}

.back-to-home:hover {
    background: var(--primary-color);
    color: var(--text-inverse);
}

.back-to-home svg {
    width: 16px;
    height: 16px;
}

/* Related Articles */
.related-articles {
    background: var(--surface-elevated);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    text-align: center;
    box-shadow: var(--shadow-base);
}

.related-title {
    color: var(--text-primary);
    margin-bottom: var(--space-4);
}

.related-description {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
}

.related-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--primary-color);
    color: var(--text-inverse);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: all var(--transition-fast);
}

.related-link:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
}

.related-link svg {
    width: 16px;
    height: 16px;
}

/* Footer */
.site-footer {
    background: var(--surface-elevated);
    border-top: 1px solid var(--border-color);
    margin-top: auto;
    padding: var(--space-12) 0 var(--space-6);
}

.footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-4);
}

.footer-content {
    display: grid;
    gap: var(--space-8);
    margin-bottom: var(--space-8);
    grid-template-columns: 1fr;
}

@media (min-width: 768px) {
    .footer-content {
        grid-template-columns: 2fr 1fr 1fr;
    }
}

.footer-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

.footer-title,
.footer-section-title {
    color: var(--text-primary);
    font-weight: 600;
    margin: 0;
}

.footer-title {
    font-size: var(--text-xl);
}

.footer-section-title {
    font-size: var(--text-base);
}

.footer-description,
.footer-meta,
.footer-tech-info,
.footer-theme-info {
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.6;
}

.footer-meta {
    font-size: var(--text-sm);
}

.footer-link-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
}

.footer-link {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
}

.footer-link:hover {
    color: var(--primary-color);
}

/* Footer Bottom */
.footer-bottom {
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-color);
}

.footer-bottom-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
    text-align: center;
}

@media (min-width: 768px) {
    .footer-bottom-content {
        flex-direction: row;
        justify-content: space-between;
        text-align: left;
    }
}

.copyright {
    color: var(--text-muted);
    font-size: var(--text-sm);
    margin: 0;
}

.footer-badges {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
}

.badge {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    background: var(--surface);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-full);
    color: var(--text-muted);
    font-weight: 500;
}

/* Responsive Design */
@media (max-width: 767px) {
    .hero-title-main {
        font-size: var(--text-4xl);
    }

    .hero-title-sub {
        font-size: var(--text-lg);
    }

    .hero-description {
        font-size: var(--text-base);
    }

    .hero-stats {
        gap: var(--space-4);
    }

    .stat-card {
        min-width: 100px;
        padding: var(--space-4);
    }

    .controls-container {
        flex-direction: column;
        align-items: stretch;
    }

    .filter-controls,
    .sort-controls {
        justify-content: space-between;
    }

    .view-controls {
        align-self: center;
    }

    .article-header-section .article-title {
        font-size: var(--text-3xl);
    }

    .article-stats {
        flex-direction: column;
        gap: var(--space-2);
    }

    .share-buttons {
        justify-content: center;
    }
}

/* Print Styles */
@media print {

    .site-header,
    .controls-section,
    .hero-section,
    .mobile-nav,
    .share-section,
    .site-footer,
    .related-articles {
        display: none;
    }

    .article-container {
        border: none;
        box-shadow: none;
        background: white;
    }

    .article-content {
        padding: 0;
    }

    .article-body {
        font-size: 12pt;
        line-height: 1.4;
        color: black;
    }
}

/* Accessibility Improvements */
@media (prefers-reduced-motion: reduce) {

    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
        scroll-behavior: auto !important;
    }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    :root {
        --border-color: #000000;
        --text-secondary: #000000;
        --text-muted: #333333;
    }

    [data-theme="dark"] {
        --border-color: #ffffff;
        --text-secondary: #ffffff;
        --text-muted: #cccccc;
    }
}

/* Focus visible polyfill for better accessibility */
.js-focus-visible :focus:not(.focus-visible) {
    outline: none;
}

/* Custom scrollbar styles */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: var(--surface);
}

::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: var(--radius-sm);
}

::-webkit-scrollbar-thumb:hover {
    background: var(--border-hover);
}

/* Selection styles */
::selection {
    background: rgba(99, 102, 241, 0.2);
    color: var(--text-primary);
}

::-moz-selection {
    background: rgba(99, 102, 241, 0.2);
    color: var(--text-primary);
}

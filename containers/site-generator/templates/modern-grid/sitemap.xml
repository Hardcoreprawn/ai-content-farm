{% set base_url = site.url %}
{% set last_updated = last_updated or current_time %}
{% set current_date = last_updated.strftime('%Y-%m-%d') if last_updated else current_time.strftime('%Y-%m-%d') %}

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns:mobile="http://www.google.com/schemas/sitemap-mobile/1.0"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">

    <!-- Homepage -->
    <url>
        <loc>{{ base_url }}</loc>
        <lastmod>{{ current_date }}</lastmod>
        <changefreq>hourly</changefreq>
        <priority>1.0</priority>
        <mobile:mobile/>
    </url>

    <!-- RSS Feed -->
    <url>
        <loc>{{ base_url }}/feed.xml</loc>
        <lastmod>{{ current_date }}</lastmod>
        <changefreq>hourly</changefreq>
        <priority>0.8</priority>
    </url>

    <!-- Articles -->
    {% for article in articles %}
    <url>
        <loc>{{ base_url }}/articles/{{ article.slug }}.html</loc>
        <lastmod>{{ article.generated_at.strftime('%Y-%m-%d') if article.generated_at else current_date }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>{% if article.quality_score and article.quality_score >= 0.9 %}0.9{% elif article.quality_score and article.quality_score >= 0.8 %}0.8{% else %}0.7{% endif %}</priority>
        <mobile:mobile/>

        {% if article.generated_at and article.generated_at >= (current_time - timedelta(days=2)) %}
        <!-- Recent articles get news sitemap treatment -->
        <news:news>
            <news:publication>
                <news:name>{{ site.title }}</news:name>
                <news:language>en</news:language>
            </news:publication>
            <news:publication_date>{{ article.generated_at.strftime('%Y-%m-%d') if article.generated_at else current_date }}</news:publication_date>
            <news:title>{{ article.title|e }}</news:title>
            <news:keywords>technology, AI, tech news{% if article.source %}, {{ article.source }}{% endif %}</news:keywords>
        </news:news>
        {% endif %}
    </url>
    {% endfor %}

    <!-- Static pages -->
    <url>
        <loc>{{ base_url }}/404.html</loc>
        <lastmod>{{ current_date }}</lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.1</priority>
        <mobile:mobile/>
    </url>

</urlset>

{
    "bindings": [
        {
            "name": "inputBlob",
            "type": "blobTrigger",
            "direction": "in",
            "path": "hot-topics/{name}",
            "connection": "AzureWebJobsStorage"
        },
        {
            "name": "req",
            "type": "httpTrigger",
            "direction": "in",
            "authLevel": "function",
            "methods": ["post"]
        },
        {
            "name": "$return",
            "type": "http",
            "direction": "out"
        },
        {
            "name": "outputBlob",
            "type": "blob",
            "direction": "out",
            "path": "content-pipeline/ranked-topics/ranked_{DateTime}.json",
            "connection": "AzureWebJobsStorage"
        }
    ]
}